generator supabaseClient {
  provider = "prisma-client-js"
}

datasource supabaseDb {
  provider  = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wallets   Wallet[]
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String
  asset     String
  balance   Decimal  @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
}

model Order {
  id        String   @id
  userId    String
  market    String
  side      String
  type      String   @default("limit")
  price     Decimal?
  quantity  Decimal
  filled    Decimal  @default(0)
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([market, createdAt])
  @@index([userId])
}

model Trade {
  id            String   @id @default(uuid())
  tradeId       Int
  orderId       String
  symbol        String
  price         Decimal
  quantity      Decimal
  side          String
  takerUserId   String
  makerUserId   String
  makerOrderId  String
  fee           Decimal?
  createdAt     DateTime @default(now())

  @@index([symbol, createdAt])
  @@index([takerUserId])
  @@index([makerUserId])
}

model DepthSnapshot {
  id        BigInt   @id @default(autoincrement())
  symbol    String
  bids      Json
  asks      Json
  timestamp BigInt
  createdAt DateTime @default(now())

  @@index([symbol, timestamp])
  @@map("depth_snapshots")
}

model OhlcvCandle {
  id        BigInt   @id @default(autoincrement())
  symbol    String
  interval  String
  openTime  BigInt
  closeTime BigInt
  open      Decimal
  high      Decimal
  low       Decimal
  close     Decimal
  volume    Decimal
  trades    Int
  createdAt DateTime @default(now())
  
  @@unique([symbol, interval, openTime])
  @@map("ohlcv_candles")
}