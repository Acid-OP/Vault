generator supabaseClient {
  provider = "prisma-client-js"
}

datasource supabaseDb {
  provider  = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wallets   Wallet[]
  orders    Order[]
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String
  asset     String
  balance   Decimal  @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
}

model Order {
  id        String   @id @default(uuid())
  userId    String
  side      String
  type      String
  price     Decimal?
  quantity  Decimal
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  trades    Trade[]
}

model Trade {
  id        String   @id @default(uuid())
  orderId   String
  price     Decimal
  quantity  Decimal
  side      String
  fee       Decimal?
  createdAt DateTime @default(now())

  order     Order    @relation(fields: [orderId], references: [id])
}

model OhlcvCandle {
  id        BigInt   @id @default(autoincrement())
  symbol    String
  interval  String
  openTime  BigInt
  closeTime BigInt
  open      Decimal
  high      Decimal
  low       Decimal
  close     Decimal
  volume    Decimal
  trades    Int
  createdAt DateTime @default(now())
  
  @@unique([symbol, interval, openTime])
  @@map("ohlcv_candles")
}